<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".PasswordActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="right"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/btn_logout"
            android:backgroundTint="@color/white"
            android:layout_gravity="right"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_logout"
            android:layout_width="40dp"
            android:layout_height="40dp"/>


    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:src="@drawable/digital"
        android:layout_height="90dp"/>


    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:orientation="vertical">

    <EditText
        android:id="@+id/edt_password"
        android:textAlignment="center"
        android:maxLength="4"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:textSize="30dp"
        android:enabled="false"
        android:textColor="@color/black"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        tools:ignore="Autofill,LabelFor,TextFields" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn1"
            android:layout_width="80dp"
            android:text="1"
            android:backgroundTint="@color/black"
            android:textColor="@color/white"
            android:layout_marginEnd="5dp"
            android:textSize="24sp"
            android:layout_height="80dp"/>

        <Button
            android:id="@+id/btn2"
            android:layout_width="80dp"
            android:text="2"
            android:backgroundTint="@color/black"
            android:textColor="@color/white"
            android:layout_marginEnd="5dp"
            android:textSize="24sp"
            android:layout_height="80dp"/>

        <Button
            android:id="@+id/btn3"
            android:layout_width="80dp"
            android:text="3"
            android:backgroundTint="@color/black"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:layout_height="80dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn4"
            android:layout_width="80dp"
            android:text="4"
            android:layout_marginEnd="5dp"
            android:backgroundTint="@color/black"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:layout_height="80dp"/>

        <Button
            android:id="@+id/btn5"
            android:layout_width="80dp"
            android:text="5"
            android:backgroundTint="@color/black"
            android:textColor="@color/white"
            android:layout_marginEnd="5dp"
            android:textSize="24sp"
            android:layout_height="80dp"/>

        <Button
            android:id="@+id/btn6"
            android:layout_width="80dp"
            android:text="6"
            android:backgroundTint="@color/black"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:layout_height="80dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn7"
            android:layout_width="80dp"
            android:text="7"
            android:backgroundTint="@color/black"
            android:textColor="@color/white"
            android:layout_marginEnd="5dp"
            android:textSize="24sp"
            android:layout_height="80dp"/>

        <Button
            android:id="@+id/btn8"
            android:layout_width="80dp"
            android:text="8"
            android:backgroundTint="@color/black"
            android:textColor="@color/white"
            android:layout_marginEnd="5dp"
            android:textSize="24sp"
            android:layout_height="80dp"/>

        <Button
            android:id="@+id/btn9"
            android:layout_width="80dp"
            android:text="9"
            android:backgroundTint="@color/black"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:layout_height="80dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn0"
            android:layout_width="80dp"
            android:text="0"
            android:backgroundTint="@color/black"
            android:textColor="@color/white"
            android:layout_marginEnd="5dp"
            android:textSize="24sp"
            android:layout_height="80dp"/>

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="80dp"
            android:text="C"
            android:layout_marginEnd="5dp"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:backgroundTint="#fc0000"
            android:layout_height="80dp"/>

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="80dp"
            android:text="OK"
            android:backgroundTint="#5bbd00"
            android:textSize="24sp"
            android:layout_height="80dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:visibility="visible"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_create_clave"
            android:layout_width="wrap_content"
            android:text="USUARIOS"
            app:cornerRadius="12dp"
            android:drawableLeft="@drawable/ic_btn_user"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:layout_height="60dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_record"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
            android:layout_width="wrap_content"
            app:cornerRadius="12dp"
            android:drawableLeft="@drawable/ic_btn_history"
            android:text="HISTORIAL"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:layout_height="60dp"/>
    </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:text="v1.0 \nDesarrollado por AUKDE"
            android:textSize="12sp"
            android:padding="10dp"
            android:layout_gravity="right"
            android:gravity="bottom"
            android:textColor="@color/black"
            android:layout_height="match_parent"/>
    </LinearLayout>

</LinearLayout>