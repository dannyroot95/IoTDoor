<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".UI.SyncDeviceActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:src="@drawable/serachqr"
        android:id="@+id/btn_qr"
        android:layout_weight="1"
        android:layout_height="200dp"
        android:contentDescription="TODO" />

    <com.aukde.iotdoor.Utils.PoppinsTextviewRegular
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:textSize="18dp"
        android:text="Escanea tu dispositivo"
        android:layout_height="wrap_content"/>

    <com.aukde.iotdoor.Utils.PoppinsTextviewLight
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:text="รณ"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center"
        android:layout_height="wrap_content">

        <com.aukde.iotdoor.Utils.PoppinsTextviewLight
            android:layout_width="wrap_content"
            android:textSize="11dp"
            android:text="Ingresa el ID de tu dispositivo"
            android:layout_height="wrap_content"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:id="@+id/til_device"
            android:layout_weight="1"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
            android:hint="ID"
            android:textColorHint="@color/blackgray"
            android:layout_height="wrap_content">

            <com.aukde.iotdoor.Utils.PoppinsEditText
                android:layout_width="match_parent"
                android:id="@+id/edt_device"
                tools:ignore="Autofill,LabelFor"
                android:textSize="11dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:textColor="@color/black"
                android:inputType="textEmailAddress"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.aukde.iotdoor.Utils.PoppinsButton
            android:layout_width="wrap_content"
            android:text="OK"
            android:id="@+id/btn_save_id"
            android:textSize="11dp"
            android:textColor="@color/white"
            android:backgroundTint="@color/primaryadmin"
            android:layout_marginLeft="8dp"
            android:layout_height="match_parent"/>

    </LinearLayout>


</LinearLayout>