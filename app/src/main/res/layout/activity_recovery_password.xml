<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="6dp"
    android:gravity="center"
    tools:context=".RecoveryPasswordActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:src="@drawable/digital"
        android:layout_height="200dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_marginBottom="12dp"
            android:textSize="16dp"
            android:fontFamily="sans-serif"
            android:text="Se le enviará a su correo electrónico un enlace para que pueda generar una nueva contraseña."
            android:layout_height="wrap_content"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:id="@+id/til_recovery_email"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
            android:hint="Email"
            android:textColorHint="@color/blackgray"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:id="@+id/edt_recovery_email"
                tools:ignore="Autofill,LabelFor"
                android:textColor="@color/black"
                android:inputType="textEmailAddress"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
            android:id="@+id/btn_recovery"
            app:cornerRadius="12dp"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/black"
            android:textColor="@color/white"
            android:text="ENVIAR"
            android:padding="16dp"
            android:layout_height="wrap_content"/>


    </LinearLayout>
</LinearLayout>